{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 2000,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.{ts,tsx}",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}